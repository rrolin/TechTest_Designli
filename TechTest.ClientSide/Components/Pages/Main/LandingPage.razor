@page "/landing"
@using TechTest.ClientSide.Data
@using TechTest.ClientSide.Models
@using TechTest.ClientSide.Mapping
@inject EmployeeService EmployeeService
@inject NavigationManager NavManager
@inject AuthenticationState AuthenticationState

<h3>Employees</h3>

@if (employees is null || employees.Count is 0)
{
    <div class="alert alert-info">
        No employees found.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Employee Name</th>
                    <th scope="col">Birthdate</th>
                    <th scope="col">Date entered</th>
                    <th scope="col">Date updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in employees)
                {
                    <tr>
                        <td>@emp.FullName</td>
                        <td>@emp.Birthdate</td>
                        <td>@emp.EnteredDate</td>
                        <td>@emp.UpdatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<EmployeeViewModel>? employees;

    protected override async Task OnInitializedAsync()
    {
        // Redirect immediately if no token
        if (string.IsNullOrEmpty(AuthenticationState.jwtToken))
        {

            NavManager.NavigateTo("/", forceLoad: true);
        }
        else
        {
            employees = await EmployeeService.GetEmployeesAsync();
        }
    }
}